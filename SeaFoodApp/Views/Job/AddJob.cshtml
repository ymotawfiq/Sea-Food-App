
@model SeaFoodApp.Models.Entities.Job


<div class="container" style="background-color:white;padding:3%">

@if (ViewBag.Added == true)
{
    <div class="alert alert-success" role="alert">
        Job Added Successfully!
    </div>
    <a class="btn btn-secondary" href="/Job/GetAllJobTitles">Go To Jobs Page</a>
}

else
{


    <div id="section" style="padding:10%">
            <h2 style="text-align:center;color:black;">Add Job</h2>
        <form action="AddJob" method="post">
            <div asp-validation-summary="All" style="color:red;"></div>
            <div class="row">
                    <h5><label for="Job Title">Job Title</label></h5>
            </div>
            <br />
            <div class="row">
                <input type="text" asp-for="@Model.Title" class="form-control" placeholder="Enter Job title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="row">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Add Job</button>
                </div>

            </div>
        </form>
    </div>
 


}
</div>




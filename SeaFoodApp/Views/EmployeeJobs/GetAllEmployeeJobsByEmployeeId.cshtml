@using SeaFoodApp.Models.Entities
<style>
    * {
        color: black;
    }
</style>

@{
    var employeeJobs = (IEnumerable<EmployeeJobs>)ViewData["employeeJobs"];
}
<div class="container" style="background-color:white;padding:3%">
    <h2>Employee Jobs</h2>

    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" href="/EmployeeJobs/AddEmployeeJob">Add Employee Job</a>
    }

<table class="table table-striped">
    <tr>
        <th>Employee</th>
        <th>Job</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var ej in employeeJobs)
    {
        <tr>
            <td>@ej.Employee.Name</td>
            <td>@ej.Job.Title</td>
                @if (User.IsInRole("Admin")){
            <td>
                <a class="btn btn-success" href="/EditEmployeeJob/@ej.Id">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger" href="/DeleteEmployeeJob/{@ej.Id}">Delete</a>
            </td>
                }
        </tr>


    }
</table>


</div>



